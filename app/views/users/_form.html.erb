<%=form_for @user do |user|%>
	<%=user.text_field :username, :placeholder => "Username (required)" if !current_user %><br>
	<%=user.password_field :password, :placeholder => "Password (required)" %><br><br>
	<% if current_user %>
		<%=user.password_field :new_password, :placeholder => "New Password" %><br>
		<%=user.password_field :confirm_password, :placeholder => "Confirm New Password" %><br>
	<% end %><br />
	<%=user.text_field :first_name, :placeholder => "First Name"%><br>
	<%=user.text_field :last_name, :placeholder => "Last Name"%><br>
	<%=user.text_field :email, :placeholder => "Email (required)"%><br>
	<%=user.text_field :blog_name, :placeholder => "Blog Name (required)" if !current_user %><br>
	
<%= user.submit %>
<% end %>